.window {
  color: #4995fa;
}

swiper {
  height: 380rpx;

}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.swiper-container {
  position: relative;
}

/*分类*/

.index-nav {
  height: 80px;
  padding: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10px;
  border-radius: 8px;
  box-shadow: 0 1rpx 2rpx 1rpx #e0e3da;
  background-color: #fffff9;
}

.nav-view {
  flex: 1px;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.index-nav image {
  width: 40px;
  height: 40px;
}

.nav-text {
  font-size: 15px;
}

.line {
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.line_text {
  font-size: 15px;
  font-weight: bold;
  margin-left: 15px;
  color: #444;
}

/*列表*/

.item {
  display: flex;
  align-items: center;
}

.item image {
  display: block;
  width: 120px;
  margin: 10px;
  border-radius: 10px;
  height: 110px;
}

.title {
  margin-left: 15px;
  margin-bottom: 10px;
}

.title text {
  font-size: 16px;
  color: #787878;
}

.content {
  font-size: 12px;
  color: #787878;
  margin-left: 15px;
}

.divline {
  background: #e0e3da;
  width: 100%;
  margin-left: 10px;
  margin-right: 10px;
  height: 1px;
}
